{
  "name": "trading-platform",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "bun install && concurrently \"cd client && bun install\" \"cd server && bun install\"",
    "dev": "cd client && bun run dev",
    "server": "cd server && bun run server",
    "bundle": "concurrently \"cd client && bun run build\" \"cd server && bun run bundle\"",
    "preview": "cd client && bun run preview",
    "format": "prettier --write \"client/**/*.{js,ts,vue,json,md}\" \"server/**/*.{js,ts,json}\"",
    "start:all": "concurrently \"bun run dev\" \"bun run server\"",
    "app": "concurrently \"bun run dev\" \"bun run server\""
  },
  "dependencies": {
    "concurrently": "^9.2.0",
    "prettier": "^3.6.2"
  }
}
